// make names Uppercase
var name=prompt("What is your name?")
name=name.toUpperCase();

alert("hello"+" "+ name +"!!!" );

// for capitalizing letters

var name=prompt("What is your name?")
var capital =name.slice(0,1);
var rest = name.slice(1,100)

capital=capital.toUpperCase();

alert("Hello " + capital + rest + "!!!!!")
